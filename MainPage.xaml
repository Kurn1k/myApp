<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="40,0"
            Spacing="5">

            <Image Source="logo.png" HeightRequest="130" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a race car number eight" />
            <Entry x:Name="EntryField" Placeholder="Enter a word" />
            <Label x:Name="BinaryLabel" Text="" />
            <Button x:Name="CounterBtn" Text="Convert to Binary" Clicked="OnCounterClicked" HorizontalOptions="Fill" />
        

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
