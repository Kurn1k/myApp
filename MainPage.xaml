<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="40,0"
            Spacing="5">


            <Image Source="logo.png" HeightRequest="130" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a race car number eight" />
            <Label
                Text="CodeTransform Tool" FontSize="20"
                Style="{StaticResource Headline}"
                Margin="0,0,0,5"
                SemanticProperties.HeadingLevel="Level1" />
            <Label x:Name="BinaryLabel" Text="" />
            <Label x:Name="HexLabel" Text="" />
            <Label x:Name="CRC32Label" Text="" />
            <Entry x:Name="EntryField" Placeholder="Введите текст" />

            <Button x:Name="CounterBtn" Text="Конвертировать" Clicked="OnCounterClicked" HorizontalOptions="Fill" />

            
            <Grid Margin="20,300,20,20">
                <Label Text="Разработчик Курганов Никита" FontSize="13" HorizontalOptions="Center" />
                <Label Text="nikita-kurganov@yandex.ru" FontSize="13" HorizontalOptions="Center" Margin="0,20,0,0" />
            </Grid>


        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
